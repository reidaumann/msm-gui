<h1>
  List of all movies
</h1>

<hr>

<form action="">
  <label for="title_field">Title</label>
  <input id="title_field" type="text">

  <label for="title_field">Title</label>
  <input id="title_field" type="text">

  <label for="title_field">Year</label>
  <input id="title_field" type="text">

  <label for="title_field">Duration</label>
  <input id="title_field" type="text">

  <label for="title_field">Description</label>
  <input id="title_field" type="text">

  <label for="title_field">Image</label>
  <input id="title_field" type="text">

  <label for="title_field">Director ID</label>
  <input id="title_field" type="text">
</form>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_movies.each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <img src="<%= a_movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.year %>
    </td>

    <td>
      <% matching_directors = Director.where({ :id => a_movie.director_id }) %>
      
      <% the_director = matching_directors.at(0) %>

      <%= the_director.name %>
    </td>

    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
