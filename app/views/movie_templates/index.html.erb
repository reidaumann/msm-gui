<h1>
  List of all movies
</h1>

<hr>

<form action="/insert_movie_record" method="post">
  <div>
  <label for="title_field">Title</label>
  <input id="title_field" type="text" name="the_title">
  </div>

  <div>
  <label for="year_field">Year</label>
  <input id="year_field" type="text" name="the_year">
  </div>

  <div>
  <label for="dur_field">Duration</label>
  <input id="dur_field" type="text" name="the_dur">
  </div>

  <div>
  <label for="desc_field">Description</label>
  <input id="desc_field" type="text" name="the_desc">
  </div>

  <div>
  <label for="img_field">Image</label>
  <input id="img_field" type="text" name="the_img">
  </div>

  <div>
  <label for="dir_id_field">Director ID</label>
  <input id="dir_id_field" type="text" name="the_dir_id">
  </div>

  <button type="submit">
    Create movie
  </button>
</form>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_movies.each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <img src="<%= a_movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.year %>
    </td>

    <td>
      <% matching_directors = Director.where({ :id => a_movie.director_id }) %>
      
      <% the_director = matching_directors.at(0) %>

      <% if the_director==nil%>
          Uh oh! We weren't able to find a director for this movie.
      <% else%>
          <%=the_director.name%>
      <% end%>
    </td>

    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
